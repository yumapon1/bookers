<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>update errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<%= link_to "Show", "/books/#{@book.id}" %>
<%= link_to "Back", "/books" %>


<% end %>

