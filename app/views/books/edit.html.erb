<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>update errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
 <div class = "field">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
 <div class = "field">
  <h4>Body</h4>
  <%= f.text_area :body %>
   </div>

 <div class ="botton">
  <%= f.submit 'Update Book' %>
 </div>
<%= link_to "Show", "/books/#{@book.id}" %>
|
<%= link_to "Back", "/books" %>


<% end %>

